:root {
  color-scheme: light dark;
  --bg-color: #f3f4f6;
  /* Neutral Light Gray */
  --text-color: #1f2937;
  /* Dark Gray/Slate for text */
  --header-bg: #ffffff;
  /* White Header */
  --pane-bg: #ffffff;
  /* White Panes */
  --border-color: #e5e7eb;
  /* Light Gray Border */
  --accent-color: #e98074;
  /* Keeping Coral as accent */
  --accent-hover: #d26a5e;
  --code-font: "JetBrains Mono", "Fira Code", "Consolas", "Monaco", "Courier New", monospace;
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
    0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --success: #10b981;
  --danger: #ef4444;
}

body.dark-mode {
  color-scheme: dark;
  --bg-color: #121212;
  --text-color: #e5e7eb;
  --header-bg: #1f1f1f;
  --pane-bg: #1f1f1f;
  --border-color: #374151;
  --accent-color: #60a5fa;
  --accent-hover: #3b82f6;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  background-color: var(--bg-color);
  color: var(--text-color);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

header {
  background-color: var(--header-bg);
  border-bottom: 1px solid var(--border-color);
  padding: 0.5rem 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60px;
  gap: 1.5rem;
  flex-wrap: nowrap;
}

.header-left h1 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--accent-color);
  white-space: nowrap;
  letter-spacing: -0.025em;
}

.header-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  min-width: 0;
}

.header-center select {
  padding: 0.4rem 0.6rem;
  border-radius: 4px;
  border: 1px solid var(--border-color);
  background: var(--bg-color);
  color: var(--text-color);
  font-size: 0.95rem;
  min-width: 150px;
  max-width: 350px;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 10px;
}

.header-right .icon-btn {
  background: none;
  border: none;
  color: var(--text-color);
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.2s;
  padding: 8px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.8;
}

.header-right .icon-btn:hover {
  opacity: 1;
  background-color: rgba(0, 0, 0, 0.05);
  color: var(--accent-color);
}

body.dark-mode .header-right .icon-btn:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.header-right button:hover {
  color: var(--accent-color);
}

/* Main Container: Flex Row */
.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0;
  /* Gutters handle spacing */
  padding: 1rem;
  padding-bottom: 0.5rem;
  min-height: 0;
  overflow: hidden;
}

.main-row {
  flex: 1;
  display: flex;
  flex-direction: row;
  min-height: 0;
  width: 100%;
}

/* Left Column: Flex Col */
.left-column {
  display: flex;
  flex-direction: column;
  flex: 0 0 50%;
  /* Initial width */
  min-width: 200px;
  min-height: 0;
}

.right-column {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 200px;
  min-height: 0;
}

/* Panes */
.editor-pane {
  display: flex;
  flex-direction: column;
  background: var(--pane-bg);
  border: 1px solid var(--border-color);
  border-radius: 6px;
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  min-width: 0;
  min-height: 0;
  flex: 1;
  /* By default custom size, logic will set flex-basis or height */
}

/* Remove Grid Specifics */
/* Grid Specifics Removed */

.sql-pane {
  flex: 0 0 50%;
  /* Initial height */
}

.result-pane {
  flex: 1;
  /* Fills remaining width */
  margin-left: 0;
  /* Gutter handles spacing */
}
/* For split panes to properly sizing */
.left-column,
.editor-pane,
.result-pane {
  display: flex !important;
}

/* Splitters (Gutters) */
.gutter {
  background-color: transparent;
  transition: background-color 0.2s;
  user-select: none;
}
.gutter:hover,
.gutter:active {
  background-color: var(--accent-color);
  opacity: 0.5;
}

.gutter-horizontal {
  height: 8px;
  cursor: row-resize;
  width: 100%;
  margin-top: -4px;
  margin-bottom: -4px;
  z-index: 100;
}

.gutter-vertical {
  width: 8px;
  cursor: col-resize;
  height: 100%;
  margin-left: -4px;
  margin-right: -4px;
  z-index: 100;
}

.gutter-horizontal::after {
  content: "";
  width: 30px;
  height: 4px;
  background-color: var(--border-color);
  border-radius: 2px;
}

.gutter-vertical {
  width: 10px;
  cursor: col-resize;
  height: 100%;
  border-left: 1px solid transparent;
  border-right: 1px solid transparent;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.gutter-vertical::after {
  content: "";
  height: 30px;
  width: 4px;
  background-color: var(--border-color);
  border-radius: 2px;
}

.gutter:hover {
  background-color: rgba(0, 123, 255, 0.1);
}

.gutter-horizontal:hover {
  border-top-color: var(--accent-color);
  border-bottom-color: var(--accent-color);
}

.gutter-vertical:hover {
  border-left-color: var(--accent-color);
  border-right-color: var(--accent-color);
}

/* Special flag for resizing: disable transitions and selection */
body.resizing * {
  transition: none !important;
  user-select: none !important;
  cursor: inherit !important;
}

body.dark-mode .gutter:hover {
  background-color: rgba(77, 163, 255, 0.1);
}

/* Collapsed State */
.editor-pane.collapsed {
  flex: 0 0 auto !important;
  /* Don't grow/shrink, autosize to content */
  height: auto !important;
  /* Height determined by header */
  min-height: 0 !important;
  overflow: visible;
  /* Show border radius properly */
}

.editor-pane.collapsed textarea,
.editor-pane.collapsed .output-area,
.editor-pane.collapsed .pane-actions {
  display: none !important;
}

.editor-pane.collapsed .pane-header {
  border-bottom: none;
  margin-bottom: 0;
}

/* Responsive */
@media (max-width: 768px) {
  .container {
    flex-direction: column;
    overflow-y: auto;
  }

  .left-column {
    flex: 0 0 auto;
    width: 100%;
  }

  .gutter {
    display: none;
  }

  /* Hide gutters on mobile */
  .editor-pane {
    min-height: 300px;
    margin-bottom: 1rem;
  }
}

.pane-header {
  padding: 0.5rem;
  background: var(--bg-color);
  border-bottom: 1px solid var(--border-color);
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pane-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.icon-btn {
  background: none;
  border: none;
  color: var(--text-color);
  cursor: pointer;
  font-size: 1rem;
  padding: 4px;
  border-radius: 4px;
  transition: background-color 0.2s, color 0.2s;
  opacity: 0.7;
}

.icon-btn:hover,
.icon-btn.active {
  background-color: rgba(0, 0, 0, 0.1);
  color: var(--accent-color);
  opacity: 1;
}

.icon-btn.active {
  border: 1px solid var(--border-color);
  /* Subtle border for active state */
  background-color: rgba(0, 0, 0, 0.08);
}

body.dark-mode .icon-btn.active {
  background-color: rgba(255, 255, 255, 0.15);
}

body.dark-mode .icon-btn:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.run-btn {
  background-color: var(--accent-color);
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  cursor: pointer;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: background-color 0.2s;
  white-space: nowrap;
}

.run-btn:hover {
  background-color: var(--accent-hover);
}

.success-btn {
  background-color: var(--success) !important;
}

.success-btn:hover {
  background-color: #059669 !important;
}

textarea,
.output-area {
  flex: 1;
  border: none;
  resize: none;
  padding: 1rem;
  font-family: var(--code-font);
  font-size: 0.9rem;
  background: var(--pane-bg);
  color: var(--text-color);
  outline: none;
  transition: border-color 0.2s, background-color 0.2s;
}

.ace-editor-container {
  flex: 1;
  width: 100%;
  min-height: 100px;
}

.hidden {
  display: none !important;
}

/* Drag & Drop Feedback */
textarea.drag-over,
.output-area.drag-over {
  border: 2px dashed var(--accent-color);
  background-color: rgba(0, 123, 255, 0.05);
}

body.dark-mode textarea.drag-over {
  background-color: rgba(77, 163, 255, 0.1);
}

/* JSON Validation State */
textarea.invalid-json {
  border: 1px solid #dc3545;
}

.output-area {
  white-space: pre-wrap;
  overflow-y: auto;
}

/* Table Container & SQL Result */
.table-container {
  flex: 1;
  overflow: auto;
  background-color: var(--pane-bg);
  padding: 0;
}

table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.9rem;
  color: var(--text-color);
}

thead {
  position: sticky;
  top: 0;
  background-color: var(--header-bg);
  z-index: 10;
}

th {
  text-align: left;
  padding: 10px 12px;
  border-bottom: 2px solid var(--border-color);
  font-weight: 600;
  white-space: nowrap;
}

td {
  padding: 8px 12px;
  border-bottom: 1px solid var(--border-color);
  white-space: nowrap;
}

tr:hover {
  background-color: rgba(0, 0, 0, 0.02);
}

body.dark-mode tr:hover {
  background-color: rgba(255, 255, 255, 0.02);
}

.status-indicator {
  font-size: 0.8rem;
  margin-right: 10px;
  color: var(--text-color);
  opacity: 0.7;
}

#pane-sql-result {
  display: flex;
  flex-direction: column;
}

#pane-sql-result.hidden {
  display: none;
}

.log-pane {
  flex: 0 0 150px; /* Initial height for logs */
  min-height: 40px;
}

#log-output {
  font-family: var(--code-font);
  font-size: 0.85rem;
  background-color: var(--pane-bg);
  color: var(--text-color);
  padding: 10px;
  border-top: 1px solid var(--border-color);
}

.log-entry {
  margin-bottom: 5px;
  padding-bottom: 5px;
  border-bottom: 1px dotted var(--border-color);
}

.log-time {
  color: var(--accent-color);
  font-weight: bold;
  margin-right: 10px;
}

.log-sql {
  white-space: pre-wrap;
  word-break: break-all;
}
 
.log-entry.error {
  border-left: 3px solid var(--danger);
  background-color: rgba(239, 68, 68, 0.05);
}
 
.log-entry.error .log-time {
  color: var(--danger);
}
 
.log-entry.error .log-sql {
  color: var(--danger);
  font-weight: 500;
}

.error-text {
  color: #dc3545;
}

/* Modal */
.modal {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.4);
}

.modal-content {
  background-color: var(--pane-bg);
  margin: 5% auto;
  padding: 20px;
  border: 1px solid var(--border-color);
  width: 80%;
  max-width: 900px;
  max-height: 80vh;
  overflow-y: auto;
  border-radius: 6px;
}

.close-modal {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
  cursor: pointer;
}

.close-modal:hover {
  color: var(--text-color);
}

.markdown-body {
  line-height: 1.6;
  font-family: "Segoe UI", sans-serif;
  color: var(--text-color);
}

.markdown-body h1,
.markdown-body h2,
.markdown-body h3 {
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 0.3em;
  margin-top: 1.5em;
}

.markdown-body code {
  background-color: rgba(27, 31, 35, 0.05);
  border-radius: 3px;
  padding: 0.2em 0.4em;
  font-family: var(--code-font);
}

body.dark-mode .markdown-body code {
  background-color: rgba(200, 200, 200, 0.1);
}

.markdown-body pre {
  background: var(--bg-color);
  padding: 1rem;
  border-radius: 4px;
  overflow-x: auto;
  border: 1px solid var(--border-color);
}

.markdown-body pre code {
  background: none;
  padding: 0;
}

.markdown-body blockquote {
  border-left: 4px solid var(--accent-color);
  margin: 1em 0;
  padding-left: 1em;
  color: #6a737d;
}

body.dark-mode .markdown-body blockquote {
  color: #8b949e;
}

.markdown-body table {
  border-collapse: collapse;
  width: 100%;
  margin: 1em 0;
}

.markdown-body th,
.markdown-body td {
  border: 1px solid var(--border-color);
  padding: 6px 13px;
}

.markdown-body tr:nth-child(2n) {
  background-color: rgba(27, 31, 35, 0.05);
}

body.dark-mode .markdown-body tr:nth-child(2n) {
  background-color: rgba(200, 200, 200, 0.05);
}

.markdown-body a {
  color: var(--accent-color);
  text-decoration: none;
}

.markdown-body a:hover {
  text-decoration: underline;
}

/* Ensure font color is inherited correctly */
.markdown-body p,
.markdown-body li,
.markdown-body h1,
.markdown-body h2,
.markdown-body h3,
.markdown-body h4,
.markdown-body h5,
.markdown-body h6 {
  color: var(--text-color);
}

/* Footer */
.app-footer {
  background-color: var(--header-bg);
  border-top: 1px solid var(--border-color);
  padding: 0.8rem;
  text-align: center;
  font-size: 0.9rem;
  margin-top: auto;
  /* Push to bottom if flex container covers height */
}

.footer-content {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 15px;
  color: var(--text-color);
  opacity: 0.8;
}

.footer-content a {
  color: var(--text-color);
  text-decoration: none;
  transition: color 0.2s;
}

.footer-content a:hover {
  color: var(--accent-color);
}

.separator {
  color: var(--border-color);
}

/* Database Connection UI */
.db-connection-group {
  display: flex;
  align-items: center;
  gap: 5px;
  background: var(--bg-color);
  padding: 4px 8px;
  border-radius: 6px;
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
}

.db-connection-group.connected-success {
  border-color: var(--success);
  box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.2);
}

.db-connection-group.connected-fail {
  border-color: var(--danger);
  box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.2);
}

.db-connection-group.connected-success select {
  color: var(--success);
  font-weight: 600;
}

.db-connection-group.connected-fail select {
  color: var(--danger);
  font-weight: 600;
}

.db-connection-group:focus-within {
  border-color: var(--accent-color);
  box-shadow: 0 0 0 2px rgba(96, 165, 250, 0.2);
}

.db-connection-group select {
  background: transparent;
  border: none;
  color: var(--text-color);
  font-size: 0.95rem;
  font-weight: 500;
  padding: 2px;
  cursor: pointer;
  outline: none;
  min-width: 140px;
}

.db-connection-group select option {
  background-color: var(--pane-bg);
  color: var(--text-color);
}

.danger-btn {
  color: var(--danger) !important;
}

.danger-btn:hover {
  background-color: rgba(239, 68, 68, 0.1) !important;
  color: var(--danger) !important;
}

/* Form Styles for Modal */
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 15px;
  margin-top: 1rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.form-group label {
  font-size: 0.85rem;
  font-weight: semibold;
  color: var(--text-color);
  opacity: 0.8;
}

.form-group input {
  padding: 8px;
  border: 1px solid var(--border-color);
  border-radius: 4px;
  background-color: var(--bg-color);
  color: var(--text-color);
  font-size: 1rem;
}

.modal-actions {
  margin-top: 1.5rem;
  display: flex;
  justify-content: flex-end;
}
